---
type Props = {
  name: string;
};

const { name } = Astro.props;
---

<section
  class="mx-auto mt-20 w-fit grid grid-cols-1 grid-rows-[auto,auto,auto] lg:grid-cols-[auto,auto] lg:grid-rows-[auto,auto] gap-x-16"
>
  <h1 class="sr-only">{name}</h1>
  <div class="lg:col-start-2 lg:row-start-1">
    <slot name="title" />
  </div>
  <div class="lg:col-start-1 lg:row-start-1 lg:row-span-2">
    <slot name="media" />
  </div>
  <div
    class="mx-auto w-fit lg:col-start-2 lg:row-start-2 max-w-[23rem] font-poppins font-light text-base"
  >
    <slot name="description" />
  </div>
</section>
