      class="flex sm:hidden w-full h-8 flex-col justify-center items-center gap-1.5 active:gap-0.5 focus:gap-0.5 transition-all ease-out duration-200 cursor-pointer bg-[#FFFDE6]/50"
      aria-controls="navbar-dropdown"
    >
      <div class="w-6 h-0.25 bg-[currentColor]"></div>
