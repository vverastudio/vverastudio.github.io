<script>
  const nav = document.querySelector('#main-navigation') as HTMLDivElement;

  nav.addEventListener('click', () => {
    if (nav.dataset.open) {
      delete nav.dataset.open;
    } else {
      nav.dataset.open = 'true';
    }
  });
</script>
