---
import { Image } from 'astro:assets';
import FlowerSaturated from '../assets/flower-saturated.png';

type Props = {
  class: string;
};

const { class: className } = Astro.props;
---

<Image
  class:list={[
    'interactive-flower rotate-[var(--flower-swing,0deg)]',
    className,
  ]}
  src={FlowerSaturated}
  alt="Flower"
  widths={[768]}
  sizes="768px"
  role="presentation"
/>

<script>
  import { init } from './flower-behavior.ts';

  init();
</script>
